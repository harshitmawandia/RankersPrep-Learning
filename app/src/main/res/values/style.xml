<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Defined a new style with three items of color. -->
    <style name="DemoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themeColor</item>

        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="colorPrimaryDark">#FAFAFA</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorAccent">@color/themeColor</item>
    </style>

    <style name="RankersTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FAFAFA</item>

        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="colorPrimaryDark">@color/themeColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorAccent">@color/themeColor</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>